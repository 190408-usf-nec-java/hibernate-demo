<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <servlet>
  	<servlet-name>bear</servlet-name>
  	<servlet-class>com.revature.servlets.BearServlet</servlet-class>
  	<load-on-startup>0</load-on-startup>
  </servlet>
  
  <servlet>
  	<servlet-name>cave</servlet-name>
  	<servlet-class>com.revature.servlets.CaveServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>bear</servlet-name>
  	<url-pattern>/bears/*</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>cave</servlet-name>
  	<url-pattern>/caves/*</url-pattern>
  </servlet-mapping>
</web-app>
